@model SecretsPreviewViewModel

<h2>AWS Secrets â€“ Preview</h2>

<form method="get">
    <label class="form-label">Select Secret</label>

    <select name="secretName"
            class="form-select"
            onchange="this.form.submit()">

        <option value="">-- Select Secret --</option>

        @foreach (var secret in Model.AvailableSecrets)
        {
            <option value="@secret"
                    selected="@(secret == Model.SecretName)">
                @secret
            </option>
        }
    </select>
</form>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger mt-3">
        @Model.ErrorMessage
    </div>
}

@if (Model.Secrets.Any())
{
    <table class="table table-bordered table-striped mt-4">
        <thead class="table-dark">
            <tr>
                <th style="width:40%">Secret Key</th>
                <th style="width:60%">Secret Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Secrets)
            {
                <tr>
                    <td><strong>@item.Key</strong></td>
                    <td>
                        <input class="form-control"
                               value="@item.Value"
                               readonly />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
